{
  "name": "node-express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A modern Node.js Express TypeScript boilerplate with authentication, auto-generated API docs, database integration, and Docker deployment.",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 18.0.0 <21.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "api",
    "rest",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}