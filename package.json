{
  "name": "node-express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A modern Node.js Express TypeScript boilerplate with authentication, auto-generated API docs, database integration, and Docker deployment.",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 18.0.0 <21.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development npm run swagger && nodemon",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "npm run clean && npm run swagger && tsc",
    "clean": "rimraf dist",
    "swagger": "tsoa spec-and-routes",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "api",
    "rest",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
